transportOperator { 
                    type transportOperatorHT; cache 1;
                  }

inactiveTally {
  shannon {
	    type shannonEntropyClerk;
            map {type multiMap;
            maps (xax yax);
            xax { type spaceMap; grid lin; min -10.71; max 10.71; N 17; axis x;}
            yax { type spaceMap; grid lin; min -10.71; max 10.71; N 17; axis y;}
                }
           cycles 500;
          }
}

